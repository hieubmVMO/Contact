<resources>
    <!-- Base application theme. -->
    <style name="Theme.Contact" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="bottomSheetDialogTheme">@style/Theme.Contact.Design.Light.BottomSheetDialog
        </item>
    </style>

    <!-- Splash theme -->
    <style name="Theme.Contact.Splash" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:navigationBarColor">@android:color/black</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowBackground">@drawable/bg_splash</item>
    </style>

    <style name="Theme.Contact.Design.Light.BottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/Widget.Contact.Design.BottomSheet.Modal</item>
    </style>

    <style name="Widget.Contact.Design.BottomSheet.Modal" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/rect_radius_top_white</item>
    </style>
</resources>